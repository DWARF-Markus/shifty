datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

// CompanyType CompanyType[]
// CompanySize CompanySize[]
model Company {
  id        Int         @default(autoincrement()) @id
  name      String
  createdAt DateTime    @default(now())
  email     String      @unique
  password  String
  days      String
  type      CompanyType @relation(fields: [typeId], references: [id])
  typeId    Int
  size      CompanySize @relation(fields: [sizeId], references: [id])
  sizeId    Int
}

model CompanyType {
  id        Int       @default(autoincrement()) @id
  companyId Int?
  type      String
  Company   Company[]
}

model CompanySize {
  id        Int       @default(autoincrement()) @id
  companyId Int?
  size      String
  Company   Company[]
}

model Employee {
  id           Int    @default(autoincrement()) @id
  firstName    String
  lastName     String
  email        String @unique
  password     String
  profileImage String
}