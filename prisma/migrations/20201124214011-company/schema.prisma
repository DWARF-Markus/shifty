datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id Int @id @default(autoincrement())
  name String
  createdAt DateTime @default(now())
  email String @unique
  password String
  days String
  CompanyType CompanyType[]
  CompanySize CompanySize[]
}

model CompanyType {
  id Int @id @default(autoincrement())
  companyId Int?
  type String  
  Company Company? @relation(fields: [companyId], references: [id]) 
}

model CompanySize {
  id Int @id @default(autoincrement())
  companyId Int?
  size String 
  Company Company? @relation(fields: [companyId], references: [id]) 
}

model Employee {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  password String
  profileImage String
}