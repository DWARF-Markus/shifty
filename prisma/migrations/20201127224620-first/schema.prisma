datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id          Int           @default(autoincrement()) @id
  name        String
  createdAt   DateTime      @default(now())
  email       String        @unique
  password    String
  days        String
  CompanyType CompanyType[]
  CompanySize CompanySize[]
}

model CompanyType {
  id        Int      @default(autoincrement()) @id
  companyId Int?
  type      String
  Company   Company? @relation(fields: [companyId], references: [id])
}

model CompanySize {
  id        Int      @default(autoincrement()) @id
  companyId Int?
  size      String
  Company   Company? @relation(fields: [companyId], references: [id])
}

model Employee {
  id           Int    @default(autoincrement()) @id
  firstName    String
  lastName     String
  email        String @unique
  password     String
  profileImage String
}