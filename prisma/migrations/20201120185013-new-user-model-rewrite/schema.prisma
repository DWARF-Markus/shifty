datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  email String @unique
  password String
}

model Employee {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  password String
  profileImage String
}